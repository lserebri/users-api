{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["es2021"],
		"target": "es2021",
		"removeComments": true,
		"preserveConstEnums": true,
		"allowJs": true,
		"target": "esnext",
		"rootDir": "src",
		"outDir": "build",
		"sourceMap": false,
		"moduleResolution": "node",
		"types": ["mocha","node"]
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"test",
	],

}
